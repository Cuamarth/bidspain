<div id="UserWrapper">
	<%=render partial: "user_section"%>
	

	<div id="detailsSection" class='<%="errors_found" if @User.errors.any?%> '>
		<div class="detailsContainer ">
			<%if flash.notice %>
				<div class="alertBox" id="successBox">		
					&nbsp;&nbsp;<%=I18n.t "bidspain.user.passwordchangedok"%> &nbsp;&nbsp;
				</div>
			<%end%>
			<%= form_for @User,url: "/user/password" do |f| %>
				
				<div class="form_row row-100 password_row">	
					<label><%=I18n.t "bidspain.user.oldpassword"%>  :</label>
					<div class="form_row_value">
						<%= f.password_field :oldPassword,:size =>"30"%>
						<%if @User.errors[:oldPassword].any?%>
							<div class="inline-errors value hide"> <%=simple_format(I18n.t @User.errors[:oldPassword][0])%></div>
						<%end%>		
					</div>
				</div>
				<div class="form_row row-100 password_row" >	
					<label><%=I18n.t "bidspain.user.newpassword"%> :</label>
					<div class="form_row_value">
						<%= f.password_field :newPassword,:size =>"30"%>
						<%if @User.errors[:newPassword].any?%>
							<div class="inline-errors value hide"> <%=simple_format(I18n.t @User.errors[:newPassword][0])%></div>
						<%end%>		
					</div>
				</div>
				<div class="form_row row-100 password_row">	
					<label><%=I18n.t "bidspain.user.confirmpassword"%> :</label>
					<div class="form_row_value">
						<%= f.password_field :confirmPassword,:size =>"30" %>
						<%if @User.errors[:confirmPassword].any?%>
							<div class="inline-errors value hide"> <%=simple_format(I18n.t @User.errors[:confirmPassword][0])%></div>
						<%end%>		
					</div>
				</div>				
				<div class="form_row button_row row-100">
					<a id="sendForm" class="formButton " href="#"><%=I18n.t "bidspain.common.change"%></a>
				</div>
		
			<%end%>
		</div>
	</div>
</div>
